        <SolidColorBrush x:Key="BgDark">#050505</SolidColorBrush>
        <SolidColorBrush x:Key="GlassBorder">#20FFFFFF</SolidColorBrush>
        <SolidColorBrush x:Key="TextGray">#888888</SolidColorBrush>
        <SolidColorBrush x:Key="TextSecondary">#999999</SolidColorBrush>

        <LinearGradientBrush x:Key="NeonBorderGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Offset="0" Color="#FF1F2F"/>
            <GradientStop Offset="0.5" Color="#FF4F5F"/>
            <GradientStop Offset="1" Color="#D90C1C"/>
        </LinearGradientBrush>

        <RadialGradientBrush x:Key="DeepBackground" Center="50%, 50%" GradientOrigin="50%, 50%" RadiusX="100%" RadiusY="100%">
