<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="using:Theindie.Views.Components"
        xmlns:models="using:Theindie.Models"
        xmlns:views="using:Theindie.Views"
        x:Class="Theindie.Views.MainWindow"
        x:DataType="views:MainWindow"
        
        Title="The Indie Launcher"
        Icon="/Assets/Icons/Logo.ico"
        Background="Transparent"
        TransparencyLevelHint="AcrylicBlur"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        
        Width="1280" Height="800"
        WindowStartupLocation="CenterScreen">

   <Panel PointerPressed="OnRootPointerPressed" Background="Transparent">
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial BackgroundSource="Digger" TintColor="#050505" TintOpacity="0.95" MaterialOpacity="0.8"/>
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>

        <Grid ColumnDefinitions="240, *">
            <Border Grid.Column="0" Background="#05FFFFFF" BorderBrush="{StaticResource GlassBorder}" BorderThickness="0,0,1,0" Padding="20">
                <StackPanel Spacing="20">
                    <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,30">
                        <Border Width="32" Height="32" Background="{StaticResource AccentRed}" CornerRadius="8">
                            <TextBlock Text="TI" Foreground="White" FontWeight="Black" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="THE INDIE" FontWeight="Black" FontSize="20" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <TextBlock Text="MENU" FontSize="11" Foreground="#555" FontWeight="Bold"/>
                    <Button Background="Transparent" Content="🏠  Khám Phá" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"/>
                    <Button Background="Transparent" Content="📚  Thư Viện" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"/>
                </StackPanel>
            </Border>

            <Grid Grid.Column="1" RowDefinitions="60, *">
                
                <Grid Grid.Row="0" Background="Transparent" PointerPressed="OnHeaderPointerPressed">
                    <Border BorderBrush="{StaticResource GlassBorder}" BorderThickness="0,0,0,1" Background="#50000000"/>
                    <Grid ColumnDefinitions="*, 140" Margin="30,0">
                        
                        <Border HorizontalAlignment="Left" Width="300" Height="32" CornerRadius="16" Background="#10FFFFFF" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1">
                            <Grid ColumnDefinitions="30, *">
                                <TextBlock Text="🔍" Opacity="0.3" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12"/>
                                <TextBox Grid.Column="1" Classes="SearchInput" Watermark="Tìm kiếm game..." Foreground="#DDDDDD"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>

                <ScrollViewer Grid.Row="1" Padding="30" VerticalScrollBarVisibility="Visible">
                    <StackPanel Spacing="30">
                        <Border Height="260" CornerRadius="16" ClipToBounds="True">
                            <Panel>
                                <Border Background="#200a40"/>
                                <StackPanel VerticalAlignment="Bottom" Margin="40,30">
                                    <TextBlock Text="STARDEW VALLEY" FontWeight="Black" FontSize="42" Foreground="White"/>
                                    <Button Background="{StaticResource AccentRed}" Foreground="White" CornerRadius="6" Padding="20,8" Margin="0,15,0,0" Content="CÀI ĐẶT NGAY" FontWeight="Bold"/>
                                </StackPanel>
                            </Panel>
                        </Border>

                        <StackPanel Spacing="15">
                            <TextBlock Text="DANH SÁCH GAME" FontWeight="Bold" FontSize="16" Foreground="White"/>
                            <ItemsControl ItemsSource="{Binding Games}">
                                <ItemsControl.ItemsPanel><ItemsPanelTemplate><WrapPanel Margin="-6"/></ItemsPanelTemplate></ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="models:GameInfo">
                                        <components:GameCardView Width="230" Height="340" Click="OnGameCardClick"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                        <Panel Height="50"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>

        <components:GameDetailView Name="DetailOverlay" IsVisible="False" BackRequested="HideDetail_Overlay" InstallRequested="ShowInstall_Wizard"/>
        <components:InstallationWizardView Name="InstallWizard" IsVisible="False" CloseRequested="HideInstall_Wizard"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0">
             <Button Classes="WindowControl" Content="─" Click="Minimize_Click" ToolTip.Tip="Thu nhỏ"/>
             <Button Classes="WindowControl" Content="☐" Click="Maximize_Click" ToolTip.Tip="Phóng to"/>
             <Button Classes="WindowControl Close" Content="✕" Click="Close_Click" ToolTip.Tip="Đóng"/>
        </StackPanel>
    </Panel>
</Window>