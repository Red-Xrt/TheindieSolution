<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             
             xmlns:models="using:Theindie.Models"
             
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             
             x:DataType="models:GameInfo"
             
             x:Class="Theindie.Views.Components.GameDetailView">

    <UserControl.Styles>
        <Style Selector="Border.TagBadge">
            <Setter Property="Background" Value="#20FFFFFF"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
        <Style Selector="Border.TagBadge TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#DDDDDD"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style Selector="Button.BackButton">
            <Setter Property="Background" Value="#40000000"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#30FFFFFF"/>
        </Style>
        <Style Selector="Button.BackButton:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#60FFFFFF"/>
            <Setter Property="BorderBrush" Value="White"/>
        </Style>
    </UserControl.Styles>

    <Grid Background="#050505">
        <Panel>
            <Image Source="{Binding ImagePath, Stretch="UniformToFill" Opacity="0.4"/>
            <Border Background="#CC050505">
                <Border.Effect>
                    <BlurEffect Radius="40"/>
                </Border.Effect>
            </Border>
            <Border>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Offset="0" Color="#80000000"/>
                        <GradientStop Offset="1" Color="#050505"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
        </Panel>

        <Grid RowDefinitions="Auto, *" Margin="40,20">
            <Grid Grid.Row="0" Height="60">
                <Button Classes="BackButton" HorizontalAlignment="Left" VerticalAlignment="Center" Click="BackButton_Click">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="←" FontWeight="Bold"/>
                        <TextBlock Text="QUAY LẠI"/>
                    </StackPanel>
                </Button>
            </Grid>

            <Grid Grid.Row="1" ColumnDefinitions="*, 350">
                <ScrollViewer Grid.Column="0" Padding="0,0,40,0" VerticalScrollBarVisibility="Hidden">
                    <StackPanel Spacing="30">
                        <StackPanel Spacing="15">
                            <TextBlock Text="{Binding Title}" FontWeight="Black" FontSize="56" Foreground="White" LineHeight="60" TextWrapping="Wrap"/>
                            <StackPanel Orientation="Horizontal">
                                <Border Classes="TagBadge"><TextBlock Text="{Binding Tags}"/></Border>
                                <Border Classes="TagBadge"><TextBlock Text="VIỆT HÓA"/></Border>
                            </StackPanel>
                        </StackPanel>
                        
                        <Border Height="400" CornerRadius="16" Background="Black" BorderBrush="#30FFFFFF" BorderThickness="1">
                            <TextBlock Text="TRAILER VIDEO" Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <TextBlock Text="GIỚI THIỆU" FontWeight="Bold" FontSize="18" Foreground="White"/>
                        <TextBlock Text="{Binding Description}" Foreground="#BBBBBB" FontSize="15" LineHeight="24" TextWrapping="Wrap"/>
                        <Panel Height="50"/>
                    </StackPanel>
                </ScrollViewer>

                <Border Grid.Column="1" Background="#1A1A1A" CornerRadius="16" BorderBrush="#30FFFFFF" BorderThickness="1" Padding="25" VerticalAlignment="Top">
                    <StackPanel Spacing="25">
                        <Border CornerRadius="8" ClipToBounds="True" Height="200" BoxShadow="0 5 15 0 #80000000">
                            <Image Source="{Binding ImagePath}" Stretch="UniformToFill"/>
                        </Border>

                        <StackPanel Spacing="10">
                            <TextBlock Text="THÔNG TIN PATCH" FontWeight="Bold" Foreground="Gray" FontSize="12"/>
                            <Grid ColumnDefinitions="*, Auto">
                                <TextBlock Text="Phiên bản:" Foreground="White"/>
                                <TextBlock Grid.Column="1" Text="{Binding Version}" Foreground="White" FontWeight="Bold"/>
                            </Grid>
                            <Grid ColumnDefinitions="*, Auto">
                                <TextBlock Text="Dung lượng:" Foreground="White"/>
                                <TextBlock Grid.Column="1" Text="{Binding Size}" Foreground="White" FontWeight="Bold"/>
                            </Grid>
                            <Grid ColumnDefinitions="*, Auto">
                                <TextBlock Text="Cập nhật:" Foreground="White"/>
                                <TextBlock Grid.Column="1" Text="{Binding UpdateDate}" Foreground="White" FontWeight="Bold"/>
                            </Grid>
                        </StackPanel>

                        <Separator Background="#30FFFFFF" Height="1"/>

                        <StackPanel Spacing="10">
                            <Button Background="#FF1F2F" 
                                    CornerRadius="8" 
                                    Height="60" 
                                    HorizontalAlignment="Stretch" 
                                    HorizontalContentAlignment="Center" 
                                    VerticalContentAlignment="Center"
                                    Click="InstallButton_Click"> <TextBlock Text="CÀI ĐẶT NGAY" FontWeight="Black" FontSize="18"/>
                            </Button>
                            
                            <TextBlock Text="Yêu cầu game gốc trên Steam/GOG" Foreground="Gray" FontSize="11" HorizontalAlignment="Center" FontStyle="Italic"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>