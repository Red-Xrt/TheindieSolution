<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="using:Theindie.Models"
             x:DataType="models:GameInfo"
             x:Class="Theindie.Views.Components.GameDetailView">

    <Grid Background="#050505">
        <Panel>
            <Image Source="{Binding ImagePath, Converter={StaticResource BitmapConverter}}" Stretch="UniformToFill" Opacity="0.3"/>
            <Border Background="#CC050505"><Border.Effect><BlurEffect Radius="60"/></Border.Effect></Border>
            <Border><Border.Background><LinearGradientBrush StartPoint="0,0" EndPoint="0,1"><GradientStop Offset="0" Color="#90000000"/><GradientStop Offset="1" Color="#050505"/></LinearGradientBrush></Border.Background></Border>
        </Panel>

        <Grid RowDefinitions="60, *" Margin="30,0">
            <Grid Grid.Row="0">
                <Button Classes="CleanBtn" HorizontalAlignment="Left" VerticalAlignment="Center" Click="BackButton_Click">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="←" FontWeight="Bold"/>
                        <TextBlock Text="QUAY LẠI" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
            </Grid>

            <Grid Grid.Row="1" ColumnDefinitions="*, 320" Margin="0,0,0,30">
                <ScrollViewer Grid.Column="0" Padding="0,0,40,0" VerticalScrollBarVisibility="Hidden">
                    <StackPanel Spacing="25">
                        <TextBlock Text="{Binding Title}" FontWeight="Black" FontSize="48" Foreground="White" LineHeight="52" TextWrapping="Wrap"/>
                        
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border Background="#20FFFFFF" CornerRadius="4" Padding="10,5"><TextBlock Text="{Binding Tags}" FontSize="12" Foreground="#DDD"/></Border>
                            <Border Background="#20FFFFFF" CornerRadius="4" Padding="10,5"><TextBlock Text="VIỆT HÓA" FontSize="12" Foreground="#DDD"/></Border>
                        </StackPanel>

                        <Border Height="360" CornerRadius="12" Background="Black" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1">
                            <TextBlock Text="TRAILER / MEDIA" Foreground="#444" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                        </Border>

                        <TextBlock Text="GIỚI THIỆU" FontWeight="Bold" FontSize="16" Foreground="White" Margin="0,10,0,0"/>
                        <TextBlock Text="{Binding Description}" Foreground="#BBB" FontSize="14" LineHeight="24" TextWrapping="Wrap"/>
                        <Panel Height="50"/>
                    </StackPanel>
                </ScrollViewer>

                <Border Grid.Column="1" Background="#141414" CornerRadius="16" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1" Padding="20" VerticalAlignment="Top">
                    <StackPanel Spacing="20">
                        <Border CornerRadius="8" ClipToBounds="True" Height="180" BoxShadow="0 5 20 0 #50000000">
                            <Image Source="{Binding ImagePath, Converter={StaticResource BitmapConverter}}" Stretch="UniformToFill"/>
                        </Border>

                        <StackPanel Spacing="8">
                            <TextBlock Text="THÔNG TIN" FontWeight="Bold" Foreground="#666" FontSize="11"/>
                            <Grid ColumnDefinitions="*,Auto"><TextBlock Text="Phiên bản" Foreground="#AAA"/><TextBlock Grid.Column="1" Text="{Binding Version}" Foreground="White" FontWeight="Bold"/></Grid>
                            <Grid ColumnDefinitions="*,Auto"><TextBlock Text="Dung lượng" Foreground="#AAA"/><TextBlock Grid.Column="1" Text="{Binding Size}" Foreground="White" FontWeight="Bold"/></Grid>
                            <Grid ColumnDefinitions="*,Auto"><TextBlock Text="Ngày update" Foreground="#AAA"/><TextBlock Grid.Column="1" Text="{Binding UpdateDate}" Foreground="White" FontWeight="Bold"/></Grid>
                        </StackPanel>

                        <Separator Background="{StaticResource GlassBorder}" Height="1"/>

                        <Button Background="{StaticResource AccentRed}" CornerRadius="8" Height="50" HorizontalAlignment="Stretch" 
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="InstallButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="⬇" FontWeight="Bold"/>
                                <TextBlock Text="CÀI ĐẶT NGAY" FontWeight="Bold"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>