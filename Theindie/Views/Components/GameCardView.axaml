<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="using:Theindie.Models"
             x:DataType="models:GameInfo"
             x:Class="Theindie.Views.Components.GameCardView"
             ClipToBounds="False">

    <UserControl.Styles>
        <Style Selector="Border.CardBase">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="BorderBrush" Value="{StaticResource GlassBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="ClipToBounds" Value="True"/>
            <Setter Property="BoxShadow" Value="0 4 15 0 #50000000"/>
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" Easing="CubicEaseOut"/>
                    <BoxShadowsTransition Property="BoxShadow" Duration="0:0:0.2"/>
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Border.CardBase:pointerover">
            <Setter Property="CornerRadius" Value="10"/> <Setter Property="RenderTransform" Value="translateY(-8px)"/>
            <Setter Property="BoxShadow" Value="0 15 40 0 #60FF1F2F"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryRed}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="ZIndex" Value="99"/>
        </Style>
    </UserControl.Styles>

    <Border Classes="CardBase" Margin="10,10,10,20" PointerPressed="OnPointerPressed">
        <Grid RowDefinitions="*, Auto">
            <Panel Grid.Row="0">
                <Image Source="{Binding ImagePath, Converter={StaticResource BitmapConverter}}" Stretch="UniformToFill"/>
                <Border VerticalAlignment="Bottom" Height="80"><Border.Background><LinearGradientBrush StartPoint="0,0" EndPoint="0,1"><GradientStop Offset="0" Color="Transparent"/><GradientStop Offset="1" Color="#1A1A1A"/></LinearGradientBrush></Border.Background></Border>

                <Border VerticalAlignment="Top" HorizontalAlignment="Right" Margin="8" 
                        CornerRadius="8" Background="{StaticResource PrimaryRed}" 
                        Padding="8,4" BoxShadow="0 2 8 0 #40000000">
                    <TextBlock Text="VIỆT HÓA" FontSize="10" FontWeight="Black" Foreground="White" LetterSpacing="0.5"/>
                </Border>
            </Panel>

            <Border Grid.Row="1" Background="#1A1A1A" Padding="15">
                <StackPanel Spacing="6">
                    <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="16" Foreground="White" TextTrimming="CharacterEllipsis"/>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Border Background="#25FFFFFF" CornerRadius="4" Padding="6,3"><TextBlock Text="{Binding Tags}" FontSize="10" Foreground="#CCC" MaxWidth="120" TextTrimming="CharacterEllipsis"/></Border>
                        <StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Center"><TextBlock Text="★" Foreground="#FFD700" FontSize="10"/><TextBlock Text="{Binding Rating}" Foreground="#AAA" FontSize="10" FontWeight="Bold"/></StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>